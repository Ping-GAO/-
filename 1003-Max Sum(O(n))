#include <stdio.h>
#include <string.h>
int array[20];
int max(int a ,int b);
int main(){
	int j,cases;
	scanf("%d",&cases);
	for(j=1;j<=cases;j++){
		int num,i;
		scanf("%d",&num);
		// num is len of array
		memset(array,0,sizeof(array));
		
		for(i=0;i<num;i++){
			scanf("%d",&array[i]);
		}
		int max_Local = array[0];
		int global = array[0];
		int start = 0;
		int end;
		int global_pre;
		for(i=1;i<num;i++){
			max_Local = max(array[i],array[i]+max_Local);
			global_pre= global;
			global = max(global,max_Local);
			if(max_Local<0){
				start = i+1;
			}
			if(global>global_pre){
				end = i;
			}	
		}
		if(cases==1){
			printf("Case %d:\n%d %d %d",j,global,start+1,end+1);
		}
		else{
			printf("Case %d:\n%d %d %d\n",j,global,start+1,end+1);
		}
	}

	return 0;
}




int max(int a,int b){
	return a>b?a:b;
}
